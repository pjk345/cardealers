@model cardealers.ViewModels.HomeVM


<h2>@Model.Title</h2>

@foreach (var car in Model.Cars)
{
    <div class="col-sm-4 clo-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@car.ThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@car.Price.ToString("c")</h3>
                <h3>
                    @car.Brand - @car.Model - @car.ProductionYear
                </h3>
                <h4>
                    Mileage: @car.Mileage
                </h4>
                <h4>
                    Capacity: @car.Capacity
                </h4>
                <h4>
                    Power: @car.Power
                </h4>
                <p>@car.Description</p>
            </div>
        </div>
    </div>
}
