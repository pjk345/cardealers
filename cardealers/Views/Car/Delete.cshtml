@model Car

<div>
    <div class=" img-thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Brand" src="@Model.ThumbnailUrl" height="500" width="500" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Brand - @Model.Model</h3>
                <h4>@Model.Price</h4>
                <h4>@Model.ProductionYear</h4>
                <h4>@Model.Mileage</h4>
                <h4>@Model.Capacity</h4>
                <h4>@Model.Power</h4>
                <p>@Model.Description</p>
                <h2>Are you sure you want to delete</h2> 
                <h4 class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PhotoUrl" />
                        <input type="submit" value="Delete" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </form>
                </h4>
            </div>
        </div>
    </div>
</div>